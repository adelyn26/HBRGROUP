@using System.Security.Claims;
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor



<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewBag.Title | Inicio</title>
    <!-- Template CSS -->
    <link href="~/css/style-starter.css" rel="stylesheet" />

    <!-- google fonts -->
    <!-- link del datatable -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/js/scripts.js"></script>


    <link href="~/css/bootstrap-select.css" rel="stylesheet" />
    <link href="~/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/css/select2.bundle.css" rel="stylesheet" />


    <link href="~/js/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" />



    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

    <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href=" https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">



</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">

            <div class="sidebar-menu sticky-sidebar-menu">

                <!-- logo start -->
                <div class="logo">
                    <h3><a href="/Home/index">ADMIN</a></h3>
                </div>

                <!-- //image logo -->

                <div class="logo-icon text-center">
                    <a href="/Home/index" title="logo"><img src="~/images/logo.png" alt="logo-icon"> </a>
                </div>
                <!-- //logo end -->

                <div class="sidebar-menu-inner">

                    <!-- sidebar nav start -->
                    <ul class="nav nav-pills nav-stacked custom-nav">
                        <li class="active">
                            <a href="/Home/index"><i class="fa fa-database"></i><span> Dashboard</span></a>
                        </li>
                        <li>
                            <a href="/Categories/Index"><i class="fa fa-cogs"></i><span>Categorias</span></a>
                        </li>


                        <li><a href="/Product/Index"><i class="fa fa-table"></i> <span>Productos</span></a></li>
                        <li><a href="/Users/Profile?id=@ViewBag.Message"><i class="fa fa-user"></i> <span>Usuario</span></a></li>
                    </ul>
                    <!-- //sidebar nav end -->
                    <!-- toggle button start -->
                    <a class="toggle-btn">
                        <i class="fa fa-angle-double-left menu-collapsed__left"><span>Collapse Sidebar</span></i>
                        <i class="fa fa-angle-double-right menu-collapsed__right"></i>
                    </a>
                    <!-- //toggle button end -->
                </div>
            </div>

            <div class="header sticky-header">

                <!-- notification menu start -->
                <div class="menu-right">
                    <div class="navbar user-panel-top">
                        <div class="search-box">
                            <form action="#search-results.html" method="get">
                                <input class="search-input" placeholder="Search Here..." type="search" id="search">
                                <button class="search-submit" value=""><span class="fa fa-search"></span></button>
                            </form>
                        </div>
                        <div class="user-dropdown-details d-flex">

                            <div class="profile_details">
                                <ul>
                                    <li class="dropdown profile_details_drop">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenu3" aria-haspopup="true"
                                           aria-expanded="false">
                                            <div class="profile_img">
                                                <img src="~/images/user.png" class="rounded-circle" alt="" />
                                                <div class="user-active">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </a>
                                        <ul class="dropdown-menu drp-mnu" aria-labelledby="dropdownMenu3">
                                            <li class="user-info">
                                                <h5 class="user-name">@httpContextAccessor.HttpContext.Session.GetString("SessionName")</h5>
                                                <span class="status ml-2">Available</span>
                                            </li>
                                            <li> <a href="/Users/Profile"><i class="lnr lnr-user"></i>My Profile</a> </li>
                                            <li class="logout"> <a href="/Users/Login"><i class="fa fa-power-off"></i> Logout</a> </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!--notification menu end -->
            </div>

            <div class="container-fluid content-top-gap">
                @RenderBody()
            </div>

            <footer class="dashboard">
                <p>
                    &copy 2020 Collective. All Rights Reserved | Design by Adelyn Morillo R.
                </p>
            </footer>

        </div>
    </div>



    <script src="~/js/bootstrap-select.js"></script>
    <script src="~/js/bootstrap-datetimepicker/moment.js"></script>
    <script src="~/js/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js"></script>


    <!-- chart js -->
    <script src="~/js/Chart.min.js"></script>
    <script src="~/js/utils.js"></script>
    <script src="~/js/linechart.js"></script>
    <script src="~/js/bar.js"></script>
    <script src="~/js/jquery.nicescroll.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>

    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>



    @RenderSection("Scripts", false)
</body>
</html>
