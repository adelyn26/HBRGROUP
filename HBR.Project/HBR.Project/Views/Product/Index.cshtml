<div class="container-fluid">
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card patients-list">
                <div class="body">
                    <div class="tab-content m-t-10">
                        <div class="tab-pane table-responsive active" id="All">
                            <table id="example" class="table table-striped table-bordered" style="width:100%; align-content:center">
                                <thead>
                                    <tr class="col-md-12">
                                        <th>Productos</th>
                                        <th>Precio</th>
                                        <th>Expiraciòn</th>
                                        <th>Proveedor</th>
                                        <th>Direcciòn</th>
                                        <th class="" >Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item._Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Expiration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item._Provider)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Direction)
                                            </td>
                                            <td class="" style="text-align:center">
                                                <a href="\Product\Edit?id= @Html.DisplayFor(modelItem => item.id_Product)" title="Editar" type="button" class="btn btn-primary"><ion-icon name="create-outline"></ion-icon></a>
                                                <a href="\Product\Delete?id= @Html.DisplayFor(modelItem => item.id_Product)" title="Eliminar" type="button" class="btn btn-danger"><ion-icon name="trash"></ion-icon></a>
                                                <a href="\Product\Details?id=@Html.DisplayFor(modelItem => item.id_Product)" title="Detalle" type="button" class="btn btn-warning"><ion-icon name="newspaper-outline"></ion-icon></a>

                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="/Product/Create" type="button" class="btn btn-primary">Crear Producto</a>
</div>


<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/jquery-1.10.2.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();


    });


</script>
